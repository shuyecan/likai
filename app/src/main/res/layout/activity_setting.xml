<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sy.yuanlixiaoduzi.com.SettingActivity">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            app:title="@string/shezhi"
            android:layout_width="match_parent"
            android:id="@+id/activity_item_tool"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            />
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="26dp"
                android:layout_marginTop="12dp"
                android:text="锻炼" />


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignStart="@+id/textView8"
                android:layout_below="@+id/textView8"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/ic_volume_off_blue_600_24dp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_above="@+id/view"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@+id/imageView"
                android:gravity="center"
                android:text="静音"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <Switch
                android:id="@+id/switch1"
                android:showText="false"
                android:checked="false"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignBaseline="@+id/textView9"
                android:layout_alignBottom="@+id/textView9"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignEnd="@+id/switch1"
                android:layout_below="@+id/imageView"
                android:layout_marginTop="11dp"
                android:background="@color/zhongse" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignStart="@+id/imageView"
                android:layout_below="@+id/view"
                android:layout_marginTop="16dp"
                app:srcCompat="@drawable/ic_mic_none_blue_600_24dp" />

            <TextView
                android:id="@+id/textView3"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignStart="@+id/textView9"
                android:layout_alignTop="@+id/imageView4"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text="语音" />

            <Switch
                android:checked="true"
                android:id="@+id/switch3"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_above="@+id/view2"
                android:layout_alignStart="@+id/switch1" />

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="11dp"
               android:layout_alignEnd="@+id/switch3"
                android:layout_below="@+id/imageView4"
                android:background="@color/zhongse" />
        </RelativeLayout>

    </ScrollView>
</android.support.design.widget.CoordinatorLayout>
